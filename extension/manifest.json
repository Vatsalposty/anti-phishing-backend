{
    "manifest_version": 3,
    "name": "Anti-Phishing AI Guard",
    "version": "1.2.8",
    "description": "Premium AI-powered protection against phishing attacks.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.bmp",
            "48": "icons/icon48.bmp",
            "128": "icons/icon128.bmp"
        }
    },
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": false
    },
    "icons": {
        "16": "icons/icon16.bmp",
        "48": "icons/icon48.bmp",
        "128": "icons/icon128.bmp"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}